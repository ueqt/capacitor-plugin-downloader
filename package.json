{
  "name": "@ueqt/capacitor-plugin-downloader",
  "version": "1.0.0",
  "description": "This plugin enables Download to local file support for Capacitor.",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "UeqtCapacitorPluginDownloader.podspec"
  ],
  "author": "ueqt",
  "license": "LGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ueqt/capacitor-plugin-downloader.git"
  },
  "bugs": {
    "url": "https://github.com/ueqt/capacitor-plugin-downloader/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "microsoft",
    "azure",
    "authentication"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --autocorrect --format",
    "eslint": "eslint src/. --ext ts",
    "prettier": "prettier \"{src/*.ts,**/*.java}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run fmt && npm run lint && npm run build",
    "precommit": "npm run fmt && npm run lint && npm run build"
  },
  "devDependencies": {
    "@capacitor/core": "^5.0.4",
    "@capacitor/ios": "^5.0.4",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^3.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "precommit": "^1.2.2",
    "prettier": "~2.8.8",
    "prettier-plugin-java": "~2.1.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.24.0",
    "swiftlint": "^1.0.2",
    "typescript": "~5.1.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^5.0.4"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "dependencies": {
  },
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "precommit": {
    "tasks": [
      "npm run precommit"
    ]
  }
}
